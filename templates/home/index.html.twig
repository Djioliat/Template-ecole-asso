{% extends 'base.html.twig' %}

{% block body %}
    <section class="container text-center">
        <div class="text-center mt-5">
            <h1>Association parents élèves Marcel Samba Bourges</h1>
        </div>
        {% for programme in programmes %}
            <div class="mt-5">
                <img src="{{programme.image}}" alt="Image de l'article">
                <p class="mt-3">Date de l'évènement : {{programme.date}}</p>
                <h2 class="mt-3"> {{programme.title}} </h2>
                <p class="mt-3">{{programme.content}}</p>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_programme_edit', {'id': programme.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_programme_delete', {'id': programme.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">Supprimer</a>
                {% endif %}
            </div>
            <hr class="col-6 mx-auto">
        {% endfor %}
    </section>
{% endblock %}
